<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employ_About_Activity">

   <LinearLayout
       android:background="@color/helpbtn_color"
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <RelativeLayout

          android:background="@color/helpbtn_color"
           android:layout_width="match_parent"
           android:layout_height="50dp">

           <ImageView
               android:id="@+id/Aboutback_btn"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="7dp"
               android:background="@drawable/ic_baseline_arrow_back_24" />
           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="About"
               android:textColor="@color/helpTitle_color"
               android:paddingTop="3dp"
               android:layout_centerInParent="true"
               android:textStyle="bold"
               android:textSize="19sp"/>




       </RelativeLayout>

       <RelativeLayout
           android:layout_margin="8dp"
           android:layout_width="match_parent"
           android:layout_height="55dp">

           <androidx.cardview.widget.CardView
               app:cardBackgroundColor="@color/aboutbtn_color"

               android:layout_width="match_parent"
               android:layout_height="match_parent">

              <RelativeLayout
                  android:id="@+id/about_privacyBtn"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">
                  <TextView
                      android:text="PRIVACY POLICY"
                      android:layout_marginLeft="5dp"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:gravity="center"
                      android:textColor="@color/white"
                      android:textStyle="bold"
                      android:textSize="18sp"
                     />

                  <ImageView
                      android:layout_marginRight="8dp"
                      android:layout_centerInParent="true"
                      android:layout_alignParentRight="true"
                      android:background="@drawable/about_forward"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>



              </RelativeLayout>

           </androidx.cardview.widget.CardView>


       </RelativeLayout>
       <RelativeLayout
           android:layout_margin="8dp"
           android:layout_width="match_parent"
           android:layout_height="55dp">

           <androidx.cardview.widget.CardView
               app:cardBackgroundColor="@color/aboutbtn_color"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <RelativeLayout
                   android:id="@+id/about_disclaimerBtn"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <TextView
                       android:layout_marginLeft="5dp"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:text="DISCLAIMER"/>

                   <ImageView
                       android:layout_marginRight="8dp"
                       android:layout_centerInParent="true"
                       android:layout_alignParentRight="true"
                       android:background="@drawable/about_forward"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>



               </RelativeLayout>

           </androidx.cardview.widget.CardView>


       </RelativeLayout>
       <RelativeLayout

           android:layout_margin="8dp"
           android:layout_width="match_parent"
           android:layout_height="55dp">

           <androidx.cardview.widget.CardView
               app:cardBackgroundColor="@color/aboutbtn_color"
               android:layout_width="match_parent"
               android:layout_height="match_parent">

               <RelativeLayout
                   android:id="@+id/about_tcBtn"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
                   <TextView
                       android:layout_marginLeft="5dp"
                       android:layout_width="wrap_content"
                       android:layout_height="match_parent"
                       android:gravity="center"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:textSize="18sp"
                       android:text="T &amp; C"/>

                   <ImageView
                       android:layout_marginRight="8dp"
                       android:layout_centerInParent="true"
                       android:layout_alignParentRight="true"
                       android:background="@drawable/about_forward"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>



               </RelativeLayout>

           </androidx.cardview.widget.CardView>


       </RelativeLayout>










   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>