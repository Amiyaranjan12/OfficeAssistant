<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/help"
    tools:context=".Employ_Helpdesk_Activity">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="50dp">

           <ImageView
               android:id="@+id/helpback_btn"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:layout_marginTop="7dp"
               android:background="@drawable/ic_baseline_arrow_back_24" />




       </RelativeLayout>
       <RelativeLayout
           android:layout_width="wrap_content"
           android:layout_marginTop="23dp"
           android:layout_marginLeft="15dp"
           android:layout_marginRight="15dp"
           android:layout_height="165dp">

           <TextView
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:gravity="center"
               android:textColor="@color/helpTitle_color"
               android:text="@string/help_title"
               android:textSize="25sp"
               android:fontFamily="@font/backsl"
               />

       </RelativeLayout>
       <RelativeLayout
           android:layout_marginTop="300dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_centerInParent="true">



               <TextView
                   android:id="@+id/helptxt_mail"
                   android:layout_width="90dp"
                   android:fontFamily="@font/backsl"
                   android:layout_height="50dp"
                   android:text="MAIL US"
                   android:textColor="@color/black"
                   android:gravity="center"
                   android:background="@drawable/help_btn_design"/>


           </LinearLayout>



       </RelativeLayout>




   </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>