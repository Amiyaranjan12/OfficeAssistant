<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".EmployHome_Activity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

       <RelativeLayout
           android:background="@drawable/home_headingsrc_design"
           android:layout_width="match_parent"
           android:layout_height="250dp">
           <LinearLayout

               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <RelativeLayout
                   android:layout_marginTop="4dp"
                   android:layout_marginLeft="4dp"
                   android:layout_marginRight="4dp"
                   android:layout_width="match_parent"
                   android:layout_height="26dp">
                   <ImageView
                       android:id="@+id/elogout_btn"
                       android:layout_width="26dp"
                       android:layout_alignParentRight="true"
                       android:layout_height="match_parent"
                       android:background="@drawable/logoutbtn"
                       />



               </RelativeLayout>


               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <androidx.cardview.widget.CardView
                       android:layout_width="150dp"
                       android:layout_height="150dp"
                       android:elevation="12dp"
                       app:cardElevation="7dp"
                       android:layout_centerInParent="true"
                       app:cardCornerRadius="90dp">

                       <ImageView
                           android:id="@+id/image_homeprofile"
                           android:layout_width="match_parent"
                           android:layout_alignParentRight="true"
                           android:layout_height="match_parent"
                           />




                   </androidx.cardview.widget.CardView>





               </RelativeLayout>
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:layout_marginTop="5dp"
                   >

                   <RelativeLayout

                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:textColor="@color/black"
                           android:id="@+id/EmployName_home"
                           android:layout_width="wrap_content"
                           android:layout_height="30dp"
                           android:layout_centerInParent="true"
                           android:fontFamily="@font/backsl"
                           android:textSize="23sp" />

                   </RelativeLayout>
                   <RelativeLayout
                       android:layout_marginBottom="10dp"
                       android:layout_alignParentBottom="true"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <TextView
                           android:id="@+id/profile_time"
                           android:layout_width="wrap_content"
                           android:textColor="@color/black"
                           android:layout_height="wrap_content"
                           android:fontFamily="@font/backsl"
                           android:textSize="20sp"
                           android:layout_marginTop="6dp"
                           android:layout_centerInParent="true"/>

                   </RelativeLayout>







               </RelativeLayout>




           </LinearLayout>

       </RelativeLayout>



       <RelativeLayout

           android:layout_width="match_parent"
           android:layout_height="wrap_content">
           <androidx.cardview.widget.CardView
               android:layout_width="match_parent"
               android:layout_marginLeft="23dp"
               android:layout_marginRight="23dp"
               android:layout_marginBottom="7dp"
               android:layout_marginTop="6dp"
               app:cardCornerRadius="19dp"
               android:elevation="7dp"
               android:layout_gravity="center"
               android:layout_height="wrap_content">

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:orientation="vertical">

                   <RelativeLayout
                       android:layout_marginTop="10dp"
                       android:layout_marginLeft="9dp"
                       android:layout_marginRight="9dp"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">
                       <DigitalClock
                           android:textColor="@color/black"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_alignParentLeft="true"
                           android:textSize="17sp"/>

                       <TextView
                           android:textColor="@color/black"
                           android:id="@+id/textviewDate"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="17sp"
                           android:layout_centerInParent="true"

                           />
                       <TextView
                           android:textColor="@color/black"
                           android:id="@+id/textViewDay"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:textSize="17sp"
                           android:layout_marginRight="5dp"
                           android:layout_alignParentRight="true"

                           />

                   </RelativeLayout>

                   <ScrollView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:layout_marginTop="20dp"
                       android:layout_gravity="center">

