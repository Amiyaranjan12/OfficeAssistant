                                   android:outlineSpotShadowColor="@color/card_show"
                                   app:cardCornerRadius="8dp"
                                   app:cardElevation="1dp"
                                   android:layout_margin="4dp">

                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical"
                                       android:layout_marginTop="23dp">
                                       <ImageView
                                           android:layout_width="45dp"
                                           android:layout_marginTop="3dp"
                                           android:layout_height="45dp"
                                           android:layout_gravity="center"

                                           android:background="@drawable/employdesk" />

                                       <TextView
                                           android:layout_width="match_parent"
                                           android:layout_height="30dp"
                                           android:text="@string/employ_helpdesk"
                                           android:gravity="center"
                                           android:textSize="13sp"
                                           android:fontFamily="@font/backsl"/>


                                   </LinearLayout>

                               </androidx.cardview.widget.CardView>



                           </RelativeLayout>



                           <RelativeLayout
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_marginTop="20dp">


                               <androidx.cardview.widget.CardView
                                   android:layout_centerInParent="true"
                                   android:id="@+id/employ_ChatCard"
                                   android:layout_width="130dp"
                                   android:layout_height="130dp"
                                   android:outlineSpotShadowColor="@color/card_show"
                                   app:cardElevation="1dp"
                                   app:cardBackgroundColor="@color/empolyHome_card_color"
                                   app:cardCornerRadius="8dp"
                                   android:layout_margin="4dp">

                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical"
                                       android:layout_marginTop="23dp">
                                       <ImageView
                                           android:layout_width="45dp"
                                           android:layout_marginTop="3dp"
                                           android:layout_height="45dp"
                                           android:layout_gravity="center"

                                           android:background="@drawable/chat" />

                                       <TextView
                                           android:layout_width="match_parent"
                                           android:layout_height="30dp"
                                           android:text="Chat"
                                           android:gravity="center"
                                           android:textSize="13sp"
                                           android:fontFamily="@font/backsl"/>


                                   </LinearLayout>

                               </androidx.cardview.widget.CardView>


                           </RelativeLayout>


