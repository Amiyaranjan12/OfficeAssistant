<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Update_profile.Admin_UserUpdate_Profile_Activity">

    <androidx.cardview.widget.CardView
        android:layout_margin="2dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="200dp">
                <RelativeLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent">
                    <androidx.cardview.widget.CardView
                        android:layout_width="160dp"
                        android:layout_height="160dp"
                        android:elevation="12dp"
                        app:cardElevation="17dp"
                        android:layout_centerInParent="true"
                        app:cardCornerRadius="90dp">

                        <ImageView
                            android:id="@+id/admin_employImage"
                            android:layout_width="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_height="match_parent"
                            />




                    </androidx.cardview.widget.CardView>


                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:id="@+id/admin_employImageBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload photo"
                        android:fontFamily="@font/backsl"
                        android:textStyle="bold"
                        android:layout_marginTop="83dp"
                        android:textColor="@color/notification_Abar_color"
                        android:textSize="22sp"
                        />

                </RelativeLayout>


            </LinearLayout>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="ID:"
                            android:fontFamily="@font/backsl"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:paddingLeft="8dp"
                                android:textStyle="bold"
                                android:id="@+id/admin_employIdText"
                                android:background="@drawable/admin_editprofile_editboxdesign"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"/>

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="FULL NAME:"
                            android:fontFamily="@font/backsl"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:paddingLeft="8dp"
                                android:textStyle="bold"
                                android:id="@+id/admin_employefullNameText"
                                android:background="@drawable/admin_editprofile_editboxdesign"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"/>

                        </RelativeLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="NICK NAME:"
                            android:fontFamily="@font/backsl"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:paddingLeft="8dp"
                                android:textStyle="bold"
                                android:id="@+id/admin_employeNameText"
                                android:background="@drawable/admin_editprofile_editboxdesign"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"/>

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="DESIGNATION:"
                            android:fontFamily="@font/backsl"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:paddingLeft="8dp"
                                android:textStyle="bold"
                                android:id="@+id/admin_employeDesignationText"
                                android:background="@drawable/admin_editprofile_editboxdesign"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"/>

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="JOINING DATE:"
                            android:fontFamily="@font/backsl"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:paddingLeft="8dp"
                                android:textStyle="bold"
                                android:id="@+id/admin_employeJDateText"
                                android:background="@drawable/admin_editprofile_editboxdesign"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"/>

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="BASIC PAY:"
                            android:fontFamily="@font/backsl"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:paddingLeft="8dp"
                                android:textStyle="bold"
                                android:id="@+id/admin_employeBasicText"
                                android:background="@drawable/admin_editprofile_editboxdesign"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"/>

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="MOBILE NUMBER:"
                            android:fontFamily="@font/backsl"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:paddingLeft="8dp"
                                android:textStyle="bold"
                                android:id="@+id/admin_employeMobileText"
                                android:background="@drawable/admin_editprofile_editboxdesign"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"/>

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="EMAIL:"
                            android:fontFamily="@font/backsl"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:paddingLeft="8dp"
                                android:textStyle="bold"
                                android:id="@+id/admin_employeEmailText"
                                android:background="@drawable/admin_editprofile_editboxdesign"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"/>

                        </RelativeLayout>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginTop="8dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:text="ADDRESS:"
                            android:fontFamily="@font/backsl"
                            android:textSize="19sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:paddingLeft="8dp"
                                android:textStyle="bold"
                                android:id="@+id/admin_employeAddressText"
                                android:background="@drawable/admin_editprofile_editboxdesign"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"/>

                        </RelativeLayout>
                    </LinearLayout>


                    <RelativeLayout
                        android:layout_margin="20dp"
                        android:layout_marginTop="6dp"
                        android:layout_marginLeft="13dp"
                        android:layout_marginRight="13dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/admin_employeEditProfileBtn"
                            android:textStyle="bold"
                            android:text="Save Changes"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </RelativeLayout>




                </LinearLayout>

            </ScrollView>




        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>