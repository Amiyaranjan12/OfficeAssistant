<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Admin.Admin_allnoti.Allnoti_Activity">




    <androidx.cardview.widget.CardView
        android:layout_marginTop="30dp"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:text="Notification"
                android:fontFamily="@font/backsl"
                android:textSize="19sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <RelativeLayout
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:paddingLeft="8dp"
                    android:id="@+id/notification_allBox"
                    android:background="@drawable/admin_editprofile_editboxdesign"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"/>

                <androidx.cardview.widget.CardView
                    app:cardBackgroundColor="#B388FF"
                    app:cardCornerRadius="20dp"
                    android:text="Send"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:id="@+id/save_notiBtn"
                    android:layout_width="150dp"
                    android:layout_height="47dp"
                    android:layout_below="@+id/notification_allBox"
                    android:layout_centerInParent="true"
                    >

                    <TextView
                        android:text="Send"
                        android:layout_gravity="center"
                        android:textSize="17sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>


                </androidx.cardview.widget.CardView>

            </RelativeLayout>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>