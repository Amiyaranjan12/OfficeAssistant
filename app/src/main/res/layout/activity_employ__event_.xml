<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employ_Event_Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <RelativeLayout
            android:background="@color/notification_Abar_color"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <ImageView
                android:id="@+id/eventback_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="7dp"
                android:background="@drawable/ic_baseline_arrow_back_24" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Event"
                android:textColor="@color/helpTitle_color"
                android:paddingTop="3dp"
                android:layout_centerInParent="true"
                android:fontFamily="@font/backsl"
                android:textSize="15sp"/>




        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/evnet_recycle"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >


        </androidx.recyclerview.widget.RecyclerView>




    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>