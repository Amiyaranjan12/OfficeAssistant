<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Employ_Profile_Activity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            app:cardElevation="25dp"
            app:cardCornerRadius="6dp"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_margin="13dp"
            >

            <RelativeLayout
                android:background="@drawable/empolye_profile_carddesign"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:elevation="12dp"
                        app:cardElevation="17dp"
                        android:layout_marginTop="25dp"
                        android:layout_gravity="center"
                        app:cardCornerRadius="90dp">

                        <ImageView
                            android:id="@+id/image_employ"
                            android:layout_width="match_parent"
                            android:layout_alignParentRight="true"
                            android:layout_height="match_parent"
                            />




                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/employName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="6dp"
                        android:layout_below="@+id/xyz3"
                        />

                    <TextView
                        android:id="@+id/employDesignation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="18sp"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_below="@+id/xyz4"
                        />

                </LinearLayout>

            </RelativeLayout>











        </androidx.cardview.widget.CardView>



        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="25dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="7dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="7dp"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contact Info"/>
                        <TextView
                            android:layout_marginLeft="7dp"
                            android:textSize="17dp"
                            android:textColor="#FF8A80"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="---------------------"/>
                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                            android:textColor="#BF000000"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EMAIL"/>

                        <TextView
                            android:id="@+id/textEmail"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="amiyaranjanmajhi123@gmail/com"/>

                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="6dp"
                            android:textSize="17dp"
                            android:textColor="#BF000000"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="PHONE"/>
                        <TextView
                            android:id="@+id/employMobile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                            />

                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="6dp"
                            android:textSize="17dp"
                            android:textColor="#BF000000"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ADDRESS"/>

                        <TextView
                            android:id="@+id/employAddress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                            android:layout_marginBottom="25dp"
                            />


                    </LinearLayout>




                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    app:cardElevation="25dp"
                    android:layout_marginLeft="13dp"
                    android:layout_marginRight="13dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="25dp"

                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="7dp"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Other Info"/>
                        <TextView
                            android:layout_marginLeft="7dp"
                            android:textSize="17dp"
                            android:textColor="#FF8A80"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="------------------"/>

                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                            android:textColor="#BF000000"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EMPLOYEE ID"/>
                        <TextView
                            android:id="@+id/employId"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                           />

                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="6dp"
                            android:textSize="17dp"
                            android:textColor="#BF000000"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JOINING DATE"/>
                        <TextView
                            android:id="@+id/joningDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                            />



                        <TextView
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="6dp"
                            android:textSize="17dp"
                            android:textColor="#BF000000"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BASIC PAY"/>

                        <TextView
                            android:id="@+id/employBasicpay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="7dp"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                            android:layout_marginBottom="25dp"
                            />


                    </LinearLayout>




                </androidx.cardview.widget.CardView>





            </LinearLayout>






        </ScrollView>













    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>