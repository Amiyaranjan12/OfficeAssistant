<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.Admin_attendance_Activity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:background="@color/notification_Abar_color"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/attendanceBack_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/ic_baseline_arrow_back_24" />
            <TextView
                android:id="@+id/today_dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/helpTitle_color"
                android:paddingTop="1dp"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="19sp"/>




        </RelativeLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="3dp"
            android:id="@+id/admin_attendRecycler"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>