<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.admin_salarySlip_Activity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:background="@color/notification_Abar_color"
            android:layout_width="match_parent"
            android:layout_height="55dp">

            <ImageView
                android:id="@+id/SalaryBack_btn"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginTop="13dp"
                android:background="@drawable/ic_baseline_arrow_back_24" />
            <TextView
                android:id="@+id/today_dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/helpTitle_color"
                android:paddingTop="1dp"
                android:text="Upload Salary Slip"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:textSize="19sp"/>




        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:text="Employee ID        :"/>
            <TextView
                android:id="@+id/admin_employId"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/eide"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:textSize="20sp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/enae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:text="Employee Name :"/>
            <TextView
                android:id="@+id/admin_employName"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/enae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:textSize="20sp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="9dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/eeae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:textSize="20sp"
                android:text="Employee Name :"/>
            <TextView

                android:id="@+id/admin_employEmail"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:layout_toRightOf="@+id/eeae"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="13dp"
                android:textSize="17sp"
                />

        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="140dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DF2979FF"
                android:textSize="30sp"
                android:fontFamily="@font/backsl"
                android:text="Upload  Salary  Slip"/>

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="17dp"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="1dp"
                app:cardElevation="5dp"
                android:id="@+id/t1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_margin="1dp"
                    android:background="@drawable/salaryreporteditboxdesign"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <AutoCompleteTextView
                        android:id="@+id/adminSalaryMonthtext"
                        android:layout_width="160dp"
                        android:background="#07000000"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:textSize="20sp"
                        android:hint="Choose a month"/>



                    <ImageView
                        android:id="@+id/admin_monthOpImage"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/adminSalaryMonthtext"
                        android:layout_alignBottom="@+id/adminSalaryMonthtext"
                        android:layout_toRightOf="@id/adminSalaryMonthtext"
                        android:src="@drawable/ic_baseline_arrow_drop_down_24"/>


                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
               android:layout_marginRight="1dp"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="24dp"
                android:layout_width="wrap_content"
                android:layout_toRightOf="@+id/t1"
                android:layout_height="match_parent">

                <RelativeLayout

                    android:layout_margin="1dp"
                    android:background="@drawable/salaryreporteditboxdesign"

                    android:layout_width="100dp"
                    android:layout_height="match_parent">

                    <TextView

                        android:id="@+id/admin_SalaryYeartext"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="17sp"
                        />

                </RelativeLayout>
            </androidx.cardview.widget.CardView>




        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="53dp">

            <androidx.cardview.widget.CardView
                android:layout_margin="1dp"
                app:cardElevation="5dp"
                android:id="@+id/t2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:layout_margin="1dp"

                    android:background="@drawable/salaryreporteditboxdesign"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <TextView

                        android:gravity="center"
                        android:id="@+id/chosePdfText"
                        android:padding="4dp"
                        android:layout_width="200dp"
                        android:layout_height="match_parent"
                        android:textSize="15sp"
                        />





                </RelativeLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:layout_marginRight="1dp"
                android:layout_marginBottom="1dp"
                android:layout_marginTop="1dp"
                app:cardElevation="5dp"
                android:layout_marginLeft="24dp"
                android:layout_toRightOf="@+id/t2"
                android:layout_width="100dp"
                android:layout_height="match_parent"
               >
                <RelativeLayout
                    android:layout_margin="1dp"
                    android:background="@drawable/salaryreporteditboxdesign"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView

                        android:id="@+id/pdfAddStrogeBtn"
                        android:layout_centerInParent="true"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Upload"
                        android:textSize="17sp"
                        />

                </RelativeLayout>



            </androidx.cardview.widget.CardView>





        </RelativeLayout>


        <RelativeLayout

            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="#FF1744"
                android:layout_marginRight="24dp"
                android:layout_alignParentRight="true"
                android:textSize="12sp"
                android:gravity="center"
                android:text="* Please upload .pdf Type File only"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"/>


        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView

                android:layout_margin="2dp"
                android:layout_centerInParent="true"
                android:layout_width="130dp"
                android:layout_height="47dp">


                <TextView
                    android:textSize="20sp"
                    android:background="#7E651FFF"
                    android:gravity="center"
                    android:id="@+id/admin_uploadSalaryBtn"
                    android:text="Save"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"/>
            </androidx.cardview.widget.CardView>


        </RelativeLayout>





    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>